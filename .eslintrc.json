{
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 5
    },
    "rules": {
        "no-unused-vars": "off",
        "array-bracket-spacing": ["warn", "always"],
        "no-undef": "warn",
        "eqeqeq": "error",
        "no-eval": "error",
        "no-multi-spaces": "error",
        "no-new-wrappers": "error",
        "semi": ["error", "always"],
        "yoda": ["error", "never", { "exceptRange": true }]
    }
}
